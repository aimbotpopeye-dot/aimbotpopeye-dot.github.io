    <div id="envelopeWrapper" class="envelope-wrapper relative cursor-pointer" style="perspective: 1000px;" onclick="openLetter()">
        
        <!-- Texto de instrucción para hacer clic -->
        <div id="clickInstruction" class="absolute bottom-full mb-4 w-full text-center">
            <p class="text-white/80 text-lg animate-pulse">Haz clic para abrir</p>
        </div>

        <!-- Sobre (parte trasera) -->
        <div class="back bg-[#f0e8d9] w-[320px] h-[220px] md:w-[400px] md:h-[250px] rounded-lg shadow-lg absolute top-0 left-0"></div>

        <!-- Carta -->
        <div class="letter bg-white w-[300px] h-[200px] md:w-[380px] md:h-[230px] absolute top-[10px] left-[10px] md:top-[10px] md:left-[10px] rounded-md flex items-center justify-center overflow-hidden">
            <div class="letter-content p-6 h-full w-full overflow-y-auto text-center">
                <h3 class="text-2xl md:text-3xl font-bold mb-4 text-gray-700">Para mis grandes amigos: Lucas, Gabriel, Bobby y Juan,</h3>
                <p class="mb-3">
