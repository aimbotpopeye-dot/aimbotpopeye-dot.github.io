    <script>
        let isOpen = false;
        function openLetter() {
            if (isOpen) return;
            isOpen = true;
            
            const envelopeWrapper = document.getElementById('envelopeWrapper');
            const body = document.getElementById('body');
            const instruction = document.getElementById('clickInstruction');
            
            // Ocultar el texto de instrucción
            if (instruction) {
                instruction.style.opacity = '0';
            }
            
            envelopeWrapper.classList.add('open');
            envelopeWrapper.style.cursor = 'default';
            
            // Transición para alejar el sobre y cambiar el fondo
            setTimeout(() => {
                envelopeWrapper.style.transform = 'scale(0.8)';
                body.classList.remove('bg-black');
                body.classList.add('bg-gray-200');
            }, 1000);

            // Hacer que la carta ocupe más espacio en la pantalla
            setTimeout(() => {
                const letter = document.querySelector('.letter');
                const letterContent = document.querySelector('.letter-content');
                
                letter.style.transition = 'all 0.8s ease-in-out';
                letter.style.width = '90vw';
                letter.style.height = '80vh';
                letter.style.maxWidth = '600px';
                letter.style.position = 'fixed';
                letter.style.top = '50%';
                letter.style.left = '50%';
                letter.style.transform = 'translate(-50%, -50%)';
                letter.style.zIndex = '50';
                
                // Asegurarse de que el scroll comience desde arriba
                letterContent.scrollTop = 0;
            }, 2000);
        }
    </script>
