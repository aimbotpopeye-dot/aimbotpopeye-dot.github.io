    <style>
        /* Estilos generales y de la carta */
        body {
            font-family: 'Inter', sans-serif;
            transition: background-color 1s ease;
        }
        .letter-content {
            font-family: 'Caveat', cursive;
            font-size: 1.75rem;
            line-height: 2.2rem;
            color: #333;
            opacity: 0;
            transition: opacity 0.8s 1.5s ease-in-out;
        }
        
        /* Ocultar la barra de scroll para una apariencia más limpia */
        .letter-content::-webkit-scrollbar { display: none; }
        .letter-content { -ms-overflow-style: none; scrollbar-width: none; }

        /* Estilos de la animación del sobre */
        .envelope-wrapper {
            transition: transform 1s ease-in-out;
        }
        .flap {
            transform-origin: top;
            transition: transform 0.7s ease-in-out;
        }
        .envelope-wrapper.open .flap {
            transform: rotateX(-180deg);
        }
        .letter {
            transform-origin: top;
            transition: transform 1s 0.5s ease-in-out, box-shadow 1s 0.5s ease-in-out;
            box-shadow: 0 0 0 rgba(0,0,0,0);
            transform: translateY(0) scale(1);
        }
        .envelope-wrapper.open .letter {
            transform: translateY(-230px) scale(1.1);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
        }
        .envelope-wrapper.open .letter-content {
            opacity: 1;
        }

        /* Animación para el texto de instrucción */
        #clickInstruction {
            transition: opacity 0.5s ease-out;
        }
